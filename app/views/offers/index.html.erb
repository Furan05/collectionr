<div class="offers-page">
  <div class="main-content">
    <h1 class="section-title">Nos offres du moment</h1>
    <div class="search-container">
      <div class="search-input-wrapper">
        <i class="fas fa-search search-icon"></i>
        <input type="text" class="search-input" placeholder="Rechercher une offre ?">
      </div>
    </div>
    <div class="cards-grid">
      <% @offers.each do |offer| %>
      <% if offer.etat == true %>
        <div class="card-wrapper">
          <div class="card-market">
            <div class="card-image" data-tilt data-tilt-glare data-tilt-max-glare="0.8">
              <%= link_to offer_path(offer) do %>
                <img src="<%= offer.image_url %>" alt="<%= offer.title %>">
              <% end %>
            </div>
            <div class="card-info">
              <div class="card-header-with-logo">
                <h3 class="card-title"><%= offer.title %></h3>
                <% if offer.card.tcg == "pokemon" %>
                <img src="<%= offer.card.set_logo %>" alt="Set Logo" class="set-logo">
                <% end %>
                </div>
              <div class="card-header-market">
                <div class="card-meta">
                  <span class="condition <%= offer.condition.downcase.gsub(' ', '-') %>"><%= offer.condition %></span>
                  <span class="language"><%= offer.langue %></span>
                </div>
              </div>
              <div class="card-price">
                <span class="price"><%= offer.price %>â‚¬</span>
                <%# <button class="buy-btn">Acheter</button> %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <% end %>
    </div>
  </div>
</div>
