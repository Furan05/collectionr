<div class="offer-container">
  <div class="offer-form">
    <h2>Create New Offer</h2>

    <%= simple_form_for(@offer) do |f| %>
      <div class="form-inputs">
        <%= f.input :title,
                    required: true,
                    autofocus: true %>

        <%= f.input :price,
                    required: true,
                    input_html: { min: '0', step: '0.01' } %>

        <%= f.input :condition,
                    collection: ['Mint', 'Near Mint', 'Excellent', 'Good', 'Light Played', 'Played'] %>

        <%= f.input :bio,
                    as: :text %>

        <%= f.input :langue,
                    collection: ['French', 'English', 'Japanese', 'German', 'Italian', 'Spanish'] %>

        <%= f.input :graduation %>

        <%= f.input :image_url %>
      </div>

      <div class="form-actions">
         <%= f.button :submit,
      @offer.persisted? ? "Edit Offer" : "Create Offer",
      class: "button-shine"
  %>
      </div>
    <% end %>

    <div class="form-links">
      <%= link_to "Back to Offers", offers_path, class: "back-link" %>
    </div>
  </div>
</div>
