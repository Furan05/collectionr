<div class="home-container">
  <!-- Hero Section -->
  <section class="hero-section">
    <div class="hero-content">
      <h1 class="hero-title">
        <span class="gradient-text">Collect</span>
        <span class="typing-text" data-controller="typing"
          data-typing-words-value='["Trade", "Discover", "Share"]'>
        </span>
      </h1>
      <p class="hero-subtitle">Your next-generation PokÃ©mon card collection platform</p>
      <div class="cta-buttons">
        <%= link_to "Start the adventure", new_user_registration_path, class: "primary-btn" %>
        <%= link_to "Discover cards", cards_path, class: "secondary-btn" %>
      </div>
      <div class="hero-stats">
        <div class="stat-item">
          <span class="stat-number" data-controller="counter" data-counter-target="20000">0</span>
          <span class="stat-label">Collectors</span>
        </div>
        <div class="stat-item">
          <span class="stat-number" data-controller="counter" data-counter-target="150000">0</span>
          <span class="stat-label">Cards traded</span>
        </div>
        <div class="stat-item">
          <span class="stat-number" data-controller="counter" data-counter-target="1500">0</span>
          <span class="stat-label">Collections</span>
        </div>
      </div>
    </div>
    <div class="hero-image">
      <div class="floating-cards">
        <img src="https://images.pokemontcg.io/base1/58.png" alt="Pokemon Card" class="card-1">
        <img src="https://images.pokemontcg.io/neo1/17.png" alt="Pokemon Card" class="card-2">
        <img src="https://images.pokemontcg.io/base1/58.png" alt="Pokemon Card" class="card-3">
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="features-section">
    <h2 class="section-title">Why choose us?</h2>
    <div class="features-grid">
      <div class="feature-card" data-controller="tilt">
        <i class="fas fa-chart-line feature-icon"></i>
        <h3>Real-time tracking</h3>
        <p>Monitor your collection's value and market trends</p>
      </div>
      <div class="feature-card" data-controller="tilt">
        <i class="fas fa-shield-alt feature-icon"></i>
        <h3>Secure trading</h3>
        <p>Secure trading system with satisfaction guarantee</p>
      </div>
      <div class="feature-card" data-controller="tilt">
        <i class="fas fa-users feature-icon"></i>
        <h3>Active community</h3>
        <p>Join a passionate community of collectors</p>
      </div>
      <div class="feature-card" data-controller="tilt">
        <i class="fas fa-qrcode feature-icon"></i>
        <h3>Smart scanning</h3>
        <p>Scan your cards to add them instantly</p>
      </div>
    </div>
  </section>

